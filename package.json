{
  "name": "kinesis-wallet",
  "productName": "Kinesis Wallet",
  "repository": "https://github.com/KinesisNetwork/wallet-desktop",
  "version": "0.3.0",
  "description": "Kinesis compliant hard wallet",
  "main": "src/index.ts",
  "scripts": {
    "lint-compile": "npm run sass-compile && npm run lint && npm run compile:tsc",
    "test": "tsc --noEmit && jest",
    "test:watch": "jest --watch",
    "predeploy:appveyor": "npm run sass-compile",
    "predeploy:travis": "npm run sass-compile && npm version $TRAVIS_TAG --no-git-tag-version",
    "deploy:electron": "electron-forge publish",
    "sass-compile": "node-sass src/style.scss src/style.css",
    "build:web": "IS_WEB=true parcel build src/index-web.html",
    "prestart": "npm run sass-compile",
    "start": "electron-forge start",
    "web": "IS_WEB=true parcel src/index-web.html --cache-dir .web-cache",
    "tsc:check": "tsc --noEmit",
    "watch:tsc": "npm run tsc:check -- -w",
    "lint": "tslint --project tsconfig.json",
    "lint-fix": "tslint --project tsconfig.json --fix"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-commit": "git update-index --again"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "tslint --fix",
      "prettier --write",
      "git add"
    ],
    "*.{js,scss,css,json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "keywords": [],
  "author": "Kinesis",
  "license": "MIT",
  "config": {
    "forge": {
      "make_targets": {
        "win32": [
          "squirrel"
        ],
        "darwin": [
          "zip",
          "dmg"
        ],
        "linux": [
          "deb",
          "rpm"
        ]
      },
      "publish_targets": {
        "win32": [
          "s3"
        ],
        "darwin": [
          "s3"
        ],
        "linux": [
          "s3"
        ]
      },
      "electronPackagerConfig": {
        "packageManager": "npm",
        "ignore": "src\\style\\.scss"
      },
      "electronWinstallerConfig": {
        "name": "KinesisWallet",
        "setupExe": "kinesis-wallet-setup.exe"
      },
      "electronInstallerDebian": {},
      "electronInstallerRedhat": {},
      "github_repository": {
        "owner": "kinesisnetwork",
        "name": "wallet-desktop"
      },
      "s3": {
        "bucket": "kinesis-desktop-wallet",
        "public": true
      }
    }
  },
  "dependencies": {
    "autotrack": "^2.4.1",
    "bip39": "^2.5.0",
    "bulma": "0.7.1",
    "bulma-checkradio": "^2.1.0",
    "bulma-divider": "1.0.4",
    "bulma-steps": "^2.2.1",
    "bulma-switch": "^2.0.0",
    "bulma-tooltip": "^2.0.2",
    "clipboard": "2.0.1",
    "connected-react-router": "^4.4.1",
    "copy-to-clipboard": "^3.0.8",
    "crypto-js": "3.1.9-1",
    "ed25519-hd-key": "^1.0.0",
    "electron-compile": "6.4.2",
    "electron-devtools-installer": "^2.2.4",
    "electron-json-storage": "4.0.2",
    "electron-squirrel-startup": "1.0.0",
    "file-saver": "1.3.8",
    "js-kinesis-sdk": "0.9.7",
    "popmotion": "^8.4.1",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "react-hot-loader": "^4.3.4",
    "react-inlinesvg": "^0.8.1",
    "react-redux": "5.0.7",
    "react-router": "^4.3.1",
    "react-router-dom": "^4.3.1",
    "redux": "4.0.0",
    "redux-observable": "1.0.0",
    "redux-persist": "5.10.0",
    "redux-persist-electron-storage": "1.1.2",
    "rxjs": "6.1.0",
    "svg-inline-react": "^3.1.0",
    "sweetalert": "2.1.0"
  },
  "devDependencies": {
    "@types/bip39": "^2.4.0",
    "@types/crypto-js": "3.1.39",
    "@types/electron": "1.6.10",
    "@types/electron-devtools-installer": "2.0.3",
    "@types/electron-json-storage": "4.0.0",
    "@types/enzyme": "^3.1.13",
    "@types/enzyme-adapter-react-16": "^1.0.3",
    "@types/enzyme-to-json": "^1.5.2",
    "@types/expect": "^1.20.3",
    "@types/file-saver": "1.3.0",
    "@types/jest": "23.3.0",
    "@types/lodash": "4.14.108",
    "@types/react": "^16.4.6",
    "@types/react-dom": "^16.0.6",
    "@types/react-redux": "6.0.0",
    "@types/react-router": "^4.0.30",
    "@types/react-router-dom": "^4.3.0",
    "@types/react-test-renderer": "^16.0.2",
    "@types/redux-persist": "4.3.1",
    "@types/webpack-env": "^1.13.6",
    "babel-core": "^6.26.3",
    "electron": "^2.0.8",
    "enzyme": "^3.4.1",
    "enzyme-adapter-react-16": "^1.2.0",
    "enzyme-to-json": "^3.3.4",
    "husky": "^1.0.0-rc.15",
    "jest": "23.4.1",
    "jsdom": "^12.0.0",
    "lint-staged": "^7.3.0",
    "node-sass": "^4.9.3",
    "parcel-bundler": "^1.9.7",
    "parcel-plugin-typescript": "^1.0.0",
    "prettier": "^1.14.3",
    "react-test-renderer": "^16.4.2",
    "ts-jest": "^23.10.4",
    "tsconfig-paths": "^3.3.1",
    "tslint": "5.10.0",
    "tslint-config-prettier": "^1.14.0",
    "tslint-react": "3.6.0",
    "typesafe-actions": "^2.0.4",
    "typescript": "^2.9.2"
  }
}
